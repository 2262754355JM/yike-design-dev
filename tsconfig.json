{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["node", "vite/client", "vitest/globals"],
    "lib": ["esnext", "dom"],
  },
  "exclude": ["**/node_modules/**", "**/demo/**", "**/example/**"]
}
